<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="jea" method="upgrade">
	<name>plg_jea_alur</name>
	<author>Sylvain Philip</author>
	<creationDate>jan 2015</creationDate>
	<copyright>Copyright (C) 2015 Sylvain Philip.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>contact@sphilip.com</authorEmail>
	<authorUrl>www.sphilip.com</authorUrl>
	<version>2.0</version>
	<description>PLG_JEA_ALUR_DESCRIPTION</description>

	<scriptfile>script.php</scriptfile>

	<files>
		<filename plugin="alur">alur.php</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="title"
					type="text"
					default="Loi ALUR"
					label="PLG_JEA_ALUR_FIELD_PUBLIC_TITLE_LABEL"
					description="PLG_JEA_ALUR_FIELD_PUBLIC_TITLE_DESC"
				/>

				<field
					name="calculate_fees_percent"
					type="radio"
					default="1"
					label="PLG_JEA_ALUR_FIELD_CALCULATE_FEES_LABEL"
					description="PLG_JEA_ALUR_FIELD_CALCULATE_FEES_DESC"
					class="btn-group"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="display_prix_hon"
					type="radio"
					default="0"
					label="PLG_JEA_ALUR_FIELD_DISPLAY_PRIX_HON_LABEL"
					description="PLG_JEA_ALUR_FIELD_DISPLAY_PRIX_HON_DESC"
					class="btn-group"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="display_prix_hors_hon_acq"
					type="radio"
					default="0"
					label="PLG_JEA_ALUR_FIELD_DISPLAY_PRIX_HORS_HON_ACQ_LABEL"
					description="PLG_JEA_ALUR_FIELD_DISPLAY_PRIX_HORS_HON_ACQ_DESC"
					class="btn-group"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="display_fields"
					type="radio"
					default="1"
					label="PLG_JEA_ALUR_FIELD_DISPLAY_FIELDS_LABEL"
					description="PLG_JEA_ALUR_FIELD_DISPLAY_FIELDS_DESC"
					class="btn-group"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
